@using WebApplication2.Models;
@{
    ViewData["Title"] = "Create";
}
@model Slider
<div class="content-wrapper">
    <div class="row">
        <div class="col-md-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <p class="card-description">
                        Basic form layout
                    </p>
                    <form class="forms-sample" method="post">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Title</label>
                            <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Description</label>
                            <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Offer</label>
                            <input type="number" class="form-control" asp-for="Offer" placeholder="Offer">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputConfirmPassword1">Image</label>
                            <input type="text" class="form-control" asp-for="Image" placeholder="Image">
                        </div>
                        
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
</div>
</div>